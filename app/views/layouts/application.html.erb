<!DOCTYPE html>
<html>
  <head>
    <title>Amigo Oculto</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>

  <body>

    <div class="header">
      <h1>
        <%= link_to 'Home', root_path, :title => "Clique aqui para ir a pÃ¡gina principal" %>
      </h1>
    </div>

    <div>
      <%= alert%>
    </div>

    <div>
      <%= notice %>
    </div>

    <% unless user_signed_in? %>
      <div>
        <%= link_to 'Login', new_user_session_path, :title => "Clique para fazer login", :id => "login" %>
        <%= link_to 'Cadastrar', new_user_registration_path, :title => "Clique para se cadastrar", :id => "cadastro" %>
      </div>
    <% else %>
      <%= button_to 'Logout', destroy_user_session_path, :method => :delete, :title => "Clique para fazer logout", :id => "logout" %>
    <% end %>

    <%= yield %>

    <div class="footer">
    </div>

  </body>

</html>
